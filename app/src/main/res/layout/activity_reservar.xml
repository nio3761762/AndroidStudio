<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reservar"
    android:background="@drawable/fb">

    <!-- Resto de los elementos -->

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="405dp"
        android:layout_height="240dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <!-- Primer LinearLayout -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Asientos disponibles:"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AsiDisponible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Segundo LinearLayout -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Asientos:"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumberSigned"
                android:layout_width="128dp"
                android:layout_height="53dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/input_db"
                android:drawableRight="@drawable/car_seat_icon_177219"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blanco"
                android:ems="10"
                android:inputType="number"
                android:maxLength="5"
                android:minHeight="48dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Tercer LinearLayout -->
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="191dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Precio Unitario:"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Cuarto LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="Horarios:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textHora"
                android:layout_width="164dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="147dp"
        android:layout_height="32dp"
        android:text="Fecha de Viaje:"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/datePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="323dp"
        android:layout_height="359dp"
        android:layout_marginTop="40dp"
        android:background="@color/semi_transparent_white_25"
        android:backgroundTint="@color/marfil"
        android:calendarTextColor="@color/blanco"
        android:datePickerMode="calendar"
        android:headerBackground="@color/gris"
        android:theme="@style/CustomDatePickerTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btnSC"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="52dp"
        android:backgroundTint="@color/button_text_color"
        android:drawableLeft="@drawable/cross"
        android:drawableTint="@color/red"
        android:padding="10dp"
        android:text="Cancelar"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="@color/button_text_color"
        android:drawableLeft="@drawable/checkmark"
        android:drawableTint="@color/verde_oscuro"
        android:padding="10dp"
        android:text="Reservar"
        android:textColor="@color/verde_oscuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnSC"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberSigned"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:autoText="false"
        android:drawableTint="@color/blanco"
        android:text="RESERVAR"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/expreso_arequipa_logo_with_white_fill"

 />
 </androidx.constraintlayout.widget.ConstraintLayout>